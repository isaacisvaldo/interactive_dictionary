datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Word {
  id          Int          @id @default(autoincrement())
  term        String       @unique
  language    String       @default("pt")
  phonetic    String?
  audioUrl    String?
  imageUrl    String?

  definitions Definition[]
  synonyms    Synonym[]
  antonyms    Antonym[]
  media       Media[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Definition {
  id           Int      @id @default(autoincrement())
  meaning      String
  partOfSpeech String?
  wordId       Int
  examples     Example[]

  word Word @relation(fields: [wordId], references: [id])
}

model Example {
  id           Int      @id @default(autoincrement())
  sentence     String
  translation  String?
  definitionId Int

  definition Definition @relation(fields: [definitionId], references: [id])
}

model Synonym {
  id     Int   @id @default(autoincrement())
  term   String
  wordId Int

  word Word @relation(fields: [wordId], references: [id])
}

model Antonym {
  id     Int   @id @default(autoincrement())
  term   String
  wordId Int

  word Word @relation(fields: [wordId], references: [id])
}

model Media {
  id       Int    @id @default(autoincrement())
  wordId   Int
  type     String // 'image' | 'audio' | 'video'
  url      String
  caption  String?
  createdAt DateTime @default(now())

  word Word @relation(fields: [wordId], references: [id])
}
